<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/widget_margin"
              android:orientation="vertical"
              android:background="@android:color/white"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
    >


        <TextView
                android:id="@+id/lineNumberW"
                android:text="1"
                style="@style/tramNumber"
        />
        <TextView
                android:id="@+id/lineRouteW"
                android:text="Zapadni kolodvor - Borongaj"
                style="@style/tramNumber"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:background="@color/textColor"
        />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/departureW"
                    style="@style/timeLabel"
            />
            <TextView
                    android:background="@drawable/arrows"
                    android:id="@+id/tripIconW"
                    style="@style/middleIcon"
                    android:gravity="center"
                    android:layout_weight="1
"
            />
            <TextView
                    android:id="@+id/arrivalW"
                    style="@style/timeLabel"
            />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>